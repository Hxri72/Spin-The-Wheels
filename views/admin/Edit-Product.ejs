              <div class="userdiv" style="width:100%;">
                <h1 class="text-center">EDIT PRODUCT</h1>
                <form action="/admin/editproduct/<%=result[0].id%>" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputEmail4">Product Name</label>
                        <input name="productname" type="text" class="form-control" id="inputEmail4" placeholder="Product name" value="<%=result[0].productname%>">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">Product category</label>
                        <br>
                        <select name="category" id="cars">
                            
                            <option><%=result[0].category%></option>
                              
                        </select>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputAddress">Description</label>
                      <input value="<%=result[0].description%>" name="description" type="text" class="form-control" id="inputAddress" placeholder="Description">
                    </div>
                    
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputCity">Quantity</label>
                        <input value="<%=result[0].quantity%>" name="quantity" type="number" class="form-control" id="inputCity">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputState">Price</label>
                        <input value="<%=result[0].price%>" name="price" type="text" class="form-control" id="inputZip">
                      </div>
                      
                      <div class="form-group col-md-6">
                        <label for="inputZip">Upload Image</label>
                        <input value="<%=result[0].productImg[0]%>" accept="image/*" name="productImg" class="form-control form-control-lg" id="formFileLg" type="file" multiple/>
                      </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">ADD PRODUCT</button>
                  </form>
                
                
