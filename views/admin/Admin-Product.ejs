            <div class="col-lg-6 grid-margin stretch-card " style="max-width:100%;">
              <div class="userdiv table-responsive" style="width:100%;">
                <a class="btn btn-primary" type="submit" href="/admin/addproduct">Add Product</a>
                <table class="table mt-5">
                  <thead>
                      <tr class="text-center">
                          <th class="text-center" scope="col">No</th>
                          <th class="text-center" scope="col">product Image</th>
                          <th class="text-center" scope="col">Product Name</th>
                          <th class="text-center" scope="col">category</th>
                          <th class="text-center" scope="col">Quantity</th>
                          <th class="text-center" scope="col">Price</th>

                      </tr>
                      
                  </thead>
                  
                  <tbody>
                    <% result.forEach(function(result,index){%>
                      <tr class="text-center">
                        <th><%=index+1%></th>
                        <th style="width:17%;"><img src="/images/<%=result.productImg[0]%>" style="width:50%;"></th>
                        <th><%=result.productname%></th>
                        <th><%=result.category%></th>
                        <th><%=result.quantity%></th>
                        <th><%=result.price%></th>
                        <td>
                            <a href="/admin/editproduct/<%=result._id%>" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                          <%if(result.productStatus==="true"){%>
                            <a onclick="softdeleteproduct('<%=result._id%>')"  class="btn btn-success">SoftDelete</a>
                          <%}else{%>
                            <a href="/admin/undosoftdeleteproduct/<%=result._id%>" class="btn btn-success">UndoSoft</a>
                          <%}%>
                        </td>  
                        <td>  
                          <a onclick="deleteproduct('<%=result._id%>')" class="btn btn-danger">Delete</a>
                        </td>
                      </tr>
                    <%})%>
                      
                  </tbody>
                  
              </table>
