<script>
    function addtocart(productId){
    Swal.fire({
      title: 'Item added to the cart',
      icon: 'success',
      showCancelButton: false,
    }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: '/addtocart/'+productId,
            method: 'get',
            success : (response) =>{
              if(response.status){
                Swal.fire({
                  icon : 'Deleted',
                  title: 'Your file has been deleted.',
                  showConfirmbutton:false
              }).then(()=>{
                  location.reload()
              })
              }
            }
          })
      }
    })
    }
</script>

