</script>

<script>
  function quantityChange(productId){
    let quantity = document.getElementById(productId + 'quantity').value
    $.ajax({
          url: '/cartinc/'+productId+"t"+quantity,
          method: 'post',
          success : (response) =>{
            if(response.status){
              location.reload()
            }}
        })
        
  }
  
</script>

